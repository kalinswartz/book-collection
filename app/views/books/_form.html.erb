<table summary="Book form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:author) %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.number_field(:price, step: 0.01) %></td>
      </tr>
      <tr>
        <th>Published</th>
        <td><%= f.date_select(:published, start_year: 1900, end_year: Date.today.year, include_blank: true ) %></td>
      </tr>
</table>