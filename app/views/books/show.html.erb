<%= link_to("Back to List", books_path, class: 'back-link') %>

<div class="books show">
  <h2>Book Details</h2>

  <table summary="book detail view">
    <tr>
      <th>Title</th>
      <td><%= @book.title %></td>
    </tr>
    <tr>
      <th>Author</th>
      <td><%= @book.author %></td>
    </tr>
    <tr>
      <th>Price</th>
      <td><%= @book.price %></td>
    </tr>
    <tr>
      <th>Published</th>
      <td><%= @book.published %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @book.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @book.updated_at %></td>
    </tr>
  </table>
</div>

<br>

<div class="actions">
    <%= link_to('Edit', edit_book_path(@book)) %>
    <%= link_to('Delete', delete_book_path(@book)) %>
  </div>

<br></br>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
