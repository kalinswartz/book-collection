<h1>Book Collection</h1>

<div>

    <%= link_to("Add New Book", new_book_path, class: 'action new') %>
    <br></br>
    <table class="listing" summary="Book list">
        <tr class="header">
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Published</th>
            <th>Actions</th> 
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.price %></td>
            <td><%= book.published %></td>
            <td class="actions">
                <%= link_to("Show", book_path(book), class: 'action show') %>   
                <%= link_to("Edit", edit_book_path(book), class: 'action edit') %>
                <%= link_to("Delete", delete_book_path(book), class: 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
<br></br>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
